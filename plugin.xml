<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
        id="com-cordova-ble"
        version="2.0.1-dev">
    <name>Ble</name>
    <description>OnyxBeacon plugin</description>
    <license>Commercial</license>

<engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>
   
<js-module src="www/ble.js" name="ble">
        <clobbers target="ble"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Ble">
                <param name="android-package" value="com.kadek.onyxreceiver.Ble"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/*">
            <provider
                android:authorities="com.kadek.onyxreceiver.provider"
                android:name="com.onyxbeaconservice.provider.IBeaconProvider"
                android:enabled="true"
                android:exported="true">
            </provider>

            <receiver android:name="com.kadek.onyxreceiver.ContentReceiver">
                <intent-filter>
                    <action android:name="com.kadek.onyxreceiver.content" />
                </intent-filter>
            </receiver>

            <receiver android:name="com.kadek.onyxreceiver.BleStateReceiver">
                <intent-filter>
                    <action android:name="com.kadek.onyxreceiver.scan" />
                </intent-filter>
            </receiver>

            <meta-data android:name="clientid" android:value="cd8d429b30f58c577f2bc0dbfd07d03b07de7d2f" />
        <meta-data android:name="secret" android:value="ce7ada82d2b3917dd35520747bf6492b4f5e1d4c" />    


            <!-- Permissions -->
            <uses-permission android:name="android.permission.BLUETOOTH"/>
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.GET_ACCOUNTS" />
            <uses-permission android:name="android.permission.USE_CREDENTIALS" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

            <!-- Push permission -->
            <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
        </config-file>

  <source-file src="src/android/ContentReceiver.java" target-dir="src/com/kadek/onyxreceiver"/>
  <source-file src="src/android/BleStateListener.java" target-dir="src/com/kadek/onyxreceiver"/>
  <source-file src="src/android/BleStateReceiver.java" target-dir="src/com/kadek/onyxreceiver"/>      
  <source-file src="src/android/Ble.java" target-dir="src/com/kadek/onyxreceiver"/>
  <framework src="src/android/ble.gradle" custom="true" type="gradleReference"/>
  <resource-file src="src/android/libs/OnyxBeaconLibrary-release.aar" target="libs/OnyxBeaconLibrary-release.aar"/>
    </platform>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="Ble">
                <param name="ios-package" value="Ble"/>
            </feature>
        </config-file>

        <header-file src="src/ios/Ble.h"/>
        <source-file src="src/ios/Ble.m"/>
    </platform>
</plugin>
